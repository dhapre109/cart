{% if reviews %}
  {% for review in reviews %}
    <table class="table table-striped table-bordered">
	  <thead>
        <tr>
            <th style="width: 50%;">{{ review.author }}</th>
            <th class="text-end">{{ review.date_added }}</th>
        </tr>
	  </thead>
	  <tbody>
        <tr>
          <td colspan="2"><p>{{ review.text }}</p>
            {% for i in 1..5 %}
              {% if review.rating < i %} <span class="fas fa-stack"><i class="fas fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fas fa-stack"><i class="fas fa-star fa-stack-2x"></i><i class="fas fa-star-o fa-stack-2x"></i></span> {% endif %}
            {% endfor %}</td>
        </tr>
	  </tbody>
    </table>
  {% endfor %}
  <div class="text-end">{{ pagination }}</div>
{% else %}
  <p class="text-center">{{ text_no_reviews }}</p>
{% endif %} 