<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
  <meta charset="UTF-8"/>
  <title>{{ title }}</title>
  <base href="{{ base }}"/>
  <link href="{{ bootstrap_css }}" type="text/css" rel="stylesheet"/>
  <link href="{{ icons }}" type="text/css" rel="stylesheet"/>
  <script src="{{ jquery }}" type="text/javascript"></script>
  <script src="{{ bootstrap_js }}" type="text/javascript"></script>
  <link href="{{ stylesheet }}" type="text/css" rel="stylesheet"/>
</head>
<body>
<div class="container">
  {% for title, results in tables %}
    {% set titles = title|split('|') %}
    <div style="page-break-after: always;">
      <h1>{{ titles[0] }}</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td colspan="3">{% if titles[1] == 'parent' %}
                <b>{{ text_parent }}</b>
              {% elseif titles[1] == 'child' %}
                <b>{{ text_child }}</b>
              {% elseif titles[1] == 'index' %}
                <b>{{ text_index }}</b>
              {% elseif titles[1] == 'extension' %}
                <span class="badge-bg-warning">{{ text_extension }}</span>
              {% endif %}</td>
          </tr>
        </thead>
        <tbody>
          {% for key, result in results %}
            <tr>
              <td>{{ result.name }}</td>
              <td>{{ result.previous_type }}</td>
              <td class="text-end">{{ result.type }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
</body>
</html>
