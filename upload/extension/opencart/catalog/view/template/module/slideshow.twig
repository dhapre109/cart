<div id="slideshow{{ module }}" class="carousel slide mb-5" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for key, banner in banners %}
      <li data-target="#slideshow{{ module }}" data-slide-to="{{ key }}"{% if loop.first %} class="active"{% endif %}></li>
    {% endfor %}
  </ol>
  <div class="carousel-inner shadow-sm rounded-lg">
    {% for banner in banners %}
      <div class="carousel-item{% if loop.first %} active{% endif %}">
        {% if banner.link %}
          <a href="{{ banner.link }}">
            <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-fluid" />
          </a>
        {% else %}
          <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-fluid" />
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#slideshow{{ module }}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">{{ button_previous }}</span>
  </a>
  <a class="carousel-control-next" href="#slideshow{{ module }}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">{{ button_next }}</span>
  </a>
</div>
<script type="text/javascript"><!--
$('#slideshow{{ module }}').carousel({
	interval: $('#slideshow{{ module }} img').length > 1 ? 2500 : 0,
	touch: true
});
//--></script>