<div class="modal show" id="modal-security">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger"><i class="fa-solid fa-triangle-exclamation"></i> {{ heading_title }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="accordion" id="accordion">
        {% if install %}
          <div class="accordion-item" id="security-install">
            <h5 class="accordion-header"><button type="button" data-bs-toggle="collapse" data-bs-target="#accordion-install" class="accordion-button collapsed"><span class="fa-solid fa-trash-can me-1"></span> {{ text_install }}</button></h5>
            <div class="accordion-collapse collapse" data-bs-parent="#accordion" id="accordion-install">
              <div class="modal-body">
                <p>{{ text_install_description }}</p>
                <div class="input-group mb-3">
                  <div class="input-group-text">{{ text_path }}</div>
                  <input type="text" value="{{ install }}" class="form-control is-invalid" readonly/>
                </div>
                <div class="text-end">
                  <button type="button" class="btn btn-danger" id="button-install"><i class="fa-regular fa-trash-can"></i> {{ button_delete }}</button>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
        {% if storage %}
          <div class="accordion-item" id="security-storage">
            <h2 class="accordion-header"><button type="button" data-bs-toggle="collapse" data-bs-target="#accordion-storage" class="accordion-button collapsed"><span class="fa-solid fa-folder me-1"></span> {{ text_storage }}</button></h2>
            <div class="accordion-collapse collapse" data-bs-parent="#accordion" id="accordion-storage">
              <div class="modal-body">
                <form id="form-storage">
                  <p>{{ text_storage_description }}</p>
                  <div class="mb-3">
                    <label class="form-label">{{ entry_path_current }}</label>
                    <input type="text" value="{{ storage }}" class="form-control is-invalid" readonly/>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">{{ entry_path_new }}</label>
                    <div class="input-group">
                      <select class="form-select" id="input-path">
                        {% for path in paths %}
                          <option value="{{ path }}">{{ path }}</option>
                        {% endfor %}
                      </select>
                      <input type="text" value="storage" placeholder="{{ text_path }}" class="form-control w-50" id="input-storage"/>
                    </div>
                    <div class="form-text">{{ help_storage }}</div>
                  </div>
                  <div class="text-end">
                    <button type="button" class="btn btn-danger" id="button-storage"><span class="fa-solid fa-circle-right"></span> {{ button_move }}</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        {% endif %}
        {% if storage_delete %}
          <div class="accordion-item" id="security-storage-delete">
            <h5 class="accordion-header"><button type="button" data-bs-toggle="collapse" data-bs-target="#accordion-storage-delete" class="accordion-button collapsed"><span class="fa-solid fa-trash-can me-1"></span> {{ text_storage_delete }}</button></h5>
            <div class="accordion-collapse collapse" data-bs-parent="#accordion" id="accordion-storage-delete">
              <div class="modal-body">
                <p>{{ text_storage_delete_description }}</p>
                <div class="input-group mb-3">
                  <div class="input-group-text">{{ text_path }}</div>
                  <input type="text" value="{{ storage_delete }}" class="form-control is-invalid" readonly/>
                </div>
                <div class="text-end">
                  <button type="button" value="storage" class="btn btn-danger" id="button-storage-delete"><i class="fa-regular fa-trash-can"></i> {{ button_delete }}</button>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
        {% if admin %}
          <div class="accordion-item" id="security-admin">
            <h2 class="accordion-header"><button type="button" data-bs-toggle="collapse" data-bs-target="#accordion-admin" class="accordion-button collapsed"><span class="fa-solid fa-folder me-1"></span> {{ text_admin }}</button></h2>
            <div class="accordion-collapse collapse" data-bs-parent="#accordion" id="accordion-admin">
              <div class="modal-body">

                <form id="form-admin">
                  <p>{{ text_admin_description }}</p>
                  <div class="mb-3">
                    <div class="input-group">
                      <div class="input-group-text">{{ text_path }}</div>
                      <input type="text" name="name" value="admin" placeholder="{{ entry_name }}" class="form-control is-invalid" id="input-admin"/>
                    </div>
                  </div>
                  <div class="text-end">
                    <button type="button" class="btn btn-danger" id="button-admin"><i class="fa-solid fa-circle-right"></i> {{ button_move }}</button>
                  </div>
                </form>

              </div>
            </div>
          </div>
        {% endif %}
        {% if admin_delete %}
          <div class="accordion-item" id="security-admin-delete">
            <h2 class="accordion-header"><button type="button" data-bs-toggle="collapse" data-bs-target="#accordion-admin-delete" class="accordion-button collapsed"><span class="fa-solid fa-trash-can me-1"></span> {{ text_admin_delete }}</button></h2>
            <div class="accordion-collapse collapse" data-bs-parent="#accordion" id="accordion-admin-delete">
              <div class="modal-body">
                <p>{{ text_admin_delete_description }}</p>
                <div class="input-group mb-3">
                  <div class="input-group-text">{{ text_path }}</div>
                  <input type="text" value="{{ admin_delete }}" class="form-control is-invalid" readonly/>
                </div>
                <div class="text-end">
                  <button type="button" value="admin" class="btn btn-danger" id="button-admin-delete"><i class="fa-solid fa-trash-can"></i> {{ button_delete }}</button>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>