{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-right">
        <button type="submit" form="form-cron" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-light"><i class="fas fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
     <div class="card">
      <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
        <div class="card-body">
            <div class="panel panel-default">
            <div class="panel-body">
                <form action="{{ form_action }}" method="post" enctype="multipart/form-data" id="form-cron" class="form-horizontal">
                <div class="form-group required row">
                    <label class="col-sm-2 col-form-label" for="input-code">{{ entry_code }}</label>
                    <div class="col-sm-10">
                    <input class="form-control" id="input-code" type="text" name="code" value="{{ code }}" placeholder="code" />
                    </div>
                </div>

                <div class="form-group required row">
                    <label class="col-sm-2 col-form-label" for="input-cycle">{{ entry_cycle }}</label>
                    <div class="col-sm-10">
                    <select name="cycle" id="input-cycle" class="form-control">
                        <option value="hour"{{ cycle == 'hour' ? ' selected="selected"' : '' }}>{{ text_hour }}</option>
                        <option value="day"{{ cycle == 'day' ? ' selected="selected"' : '' }}>{{ text_day }}</option>
                        <option value="week"{{ cycle == 'week' ? ' selected="selected"' : '' }}>{{ text_week }}</option>
                        <option value="month"{{ cycle == 'month' ? ' selected="selected"' : '' }}>{{ text_month }}</option>
                        <option value="year"{{ cycle == 'year' ? ' selected="selected"' : '' }}>{{ text_year }}</option>
                    </select>
                    </div>
                </div>
                <div class="form-group required row">
                    <label class="col-sm-2 col-form-label" for="input-action">{{ entry_action }}</label>
                    <div class="col-sm-10">
                    <input class="form-control" id="input-action" type="text" name="action" value="{{ action }}" placeholder="cron/module_name" />
                    </div>
                </div>
                <div class="form-group required row">
                    <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
                    <div class="col-sm-10">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            {% if status %}
                            <label class="btn btn-outline-secondary active"><input type="radio" name="status" value="1" checked="checked"/> {{ text_yes }}</label>
                            <label class="btn btn-outline-secondary"><input type="radio" name="status" value="0"/> {{ text_no }}</label>
                            {% else %}
                            <label class="btn btn-outline-secondary"><input type="radio" name="status" value="1"/> {{ text_yes }}</label>
                            <label class="btn btn-outline-secondary active"><input type="radio" name="status" value="0" checked="checked"/> {{ text_no }}</label>
                            {% endif %}
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
     </div>
    </div>
  </div>
</div>
{{ footer }}
