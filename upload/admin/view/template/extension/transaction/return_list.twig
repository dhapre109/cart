<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td class="text-left">{{ column_custom_field }}</td>
		<td class="text-left">{{ column_shipping }}</td>
		<td class="text-left">{{ column_status }}</td>
        <td class="text-right">{{ column_action }}</td>
      </tr>
    </thead>
    <tbody>
      {% if return_custom_fields %}
        {% for custom_field in return_custom_fields %}
		  <tr>
            <td class="text-left">{{ custom_field.name }}</td>
			<td class="text-left">
			{% if custom_field.extension_name %}
			  {{ custom_field.extension_name }}
			{% endif %}
			</td>
			<td class="text-left">
			  {% if custom_field.status == 1 %}
				{{ text_status_active }}
			  {% elseif custom_field.status == 0 %}
				{{ text_status_inactive }}
			  {% endif %}
			</td>
            <td class="text-right">
			{% if not custom_field.validate %}
			  <a href="{{ custom_field.approve }}" data-toggle="tooltip" title="{{ button_approve }}" class="btn btn-success"><i class="fas fa-thumbs-up"></i></a> <a href="{{ custom_field.deny }}" data-toggle="tooltip" title="{{ button_deny }}" class="btn btn-danger"><i class="fas fa-thumbs-down"></i></a>
			{% endif %}
		    </td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="4">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>  
</div>
