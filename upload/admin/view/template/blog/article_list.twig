<form id="form-blog-article" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="#form-blog-article">
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
      <tr>
        <td class="text-center" style="width: 1px;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));" class="form-check-input"/></td>
        <td class="text-start">{{ column_image }}</td>
        <td class="text-start">{{ column_name }}</td>
        <td class="text-center">{{ column_author_name }}</td>
        <td class="text-center">{{ column_date_added }}</td>
        <td class="text-center">{{ column_view_count }}</td>
        <td class="text-end">{{ column_action }}</td>
      </tr>
      </thead>
      <tbody>
      {% if blog_articles is not null and blog_articles|length > 0 %}
        {% for blog_article in blog_articles %}
          <tr>
            <td class="text-center"><input type="checkbox" name="selected[]" value="{{ blog_article.blog_article_id }}" class="form-check-input"/></td>
            <td class="text-start"><img src="{% if blog_article.image %}{{ blog_article.image }}{% else %}{{ image_placeholder }}{% endif %}" alt=""></td>
            <td class="text-start">{{ blog_article.name }}</td>
            <td class="text-center">
              {% if blog_article.author_name %}{{ blog_article.author_name }}{% else %}<span class="badge badge-warning bg-warning fs-6">{{ text_not_specified }}</span>{% endif %}
            </td>
            <td class="text-center">{{ blog_article.date_added }}</td>
            <td class="text-center">{{ blog_article.view_count }}</td>
            <td class="text-end"><a href="{{ blog_article.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a></td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="7">{{ text_no_results }}</td>
        </tr>
      {% endif %}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-sm-6 text-start">{{ pagination }}</div>
    <div class="col-sm-6 text-end">{{ results }}</div>
  </div>
</form>
