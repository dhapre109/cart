<div class="dropdown text-right">
  <button class="btn btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ text_language }}</button>
  <div class="dropdown-menu dropdown-menu-right">
    {% for language in languages %}
      <a href="{{ language.href }}" class="dropdown-item {% if language == code %}active{% endif %}"><img src="language/{{ language.code }}/{{ language.code }}.png"/> {{ language.text }}</a>
    {% endfor %}
  </div>
</div>
