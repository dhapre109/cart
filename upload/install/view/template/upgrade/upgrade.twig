{{ header }}
<main id="upgrade">
  <div class="border-bottom my-3">
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <h1>{{ heading_title }}</h1>
        </div>
        <div class="col">{{ language }}</div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="card">
      <div class="card-header"><i class="fas fa-sync"></i> {{ text_upgrade }}</div>
      <div class="card-body">
        <h3>{{ text_server }}</h3>
        <fieldset>
          <ol>
            <li>{{ text_error }}</li>
            <li>{{ text_clear }}</li>
            <li>{{ text_admin }}</li>
            <li>{{ text_user }}</li>
            <li>{{ text_setting }}</li>
            <li>{{ text_store }}</li>
          </ol>
        </fieldset>
        <h3>{{ text_steps }}</h3>
        <fieldset>
          <label>{{ entry_progress }}</label>
          <div class="progress">
            <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%"></div>
          </div>
          <div id="progress-text"></div>
        </fieldset>
      </div>
      <div class="card-footer d-flex justify-content-end">
        <button id="button-upgrade" class="btn btn-outline-dark" data-loading="{{ text_loading }}" data-total="{{ total }}" type="submit"><i class="fas fa-sync-alt"></i> {{ button_upgrade }}</button>
        <a id="button-continue" href="{{ store }}" class="btn btn-outline-primary ml-1 d-none">{{ button_continue }} <i class="fas fa-arrow-right"></i></a>
      </div>
    </div>
  </div>
</main>
{{ footer }}
