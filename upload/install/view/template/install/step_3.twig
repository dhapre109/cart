{{ header }}
<div id="content">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col"><h1>{{ heading_title }}</h1></div>
        <div class="col">{{ language }}</div>
      </div>
    </div>
  </div>
  <div class="container">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="card">
      <div class="card-header"><i class="fas fa-database"></i> {{ text_step_3 }}</div>
      <div class="card-body">
        <form id="form-step-3" action="{{ action }}" method="post" enctype="multipart/form-data">
          <fieldset>
            <legend>{{ text_db_connection }}</legend>
            <div class="row">
              <div class="col-12 col-lg-4 order-lg-2">
                <div class="alert alert-info">
                  <p>{{ text_help }}</p>
                  <div class="list-group">
                    <a class="list-group-item list-group-item-action list-group-item-info" href="https://docs.cpanel.net/cpanel/databases/mysql-databases/" target="_blank">{{ text_cpanel }} <i class="fas fa-external-link-alt"></i></a>
                    <a class="list-group-item list-group-item-action list-group-item-info" href="https://support.plesk.com/hc/en-us/articles/115004263014-How-to-create-a-database-in-Plesk" target="_blank">{{ text_plesk }} <i class="fas fa-external-link-alt"></i></a>
                  </div>
                </div>
              </div>
              <div class="col-12 col-lg-8 order-lg-1">
                <div class="form-row">
                  <div class="form-group col-12 col-md-6 required">
                    <label for="input-db-driver" class="col-form-label {% if error_db_driver %}text-danger{% endif %}">{{ entry_db_driver }}</label>
                    <select name="db_driver" id="input-db-driver" class="custom-select" class="col-form-label {% if error_db_driver %}is-invalid{% endif %}">
                      {% for driver in drivers %}
                        <option value="{{ driver.value }}" {% if db_driver == driver.value %}selected="selected"{% endif %}>{{ driver.text }}</option>
                      {% endfor %}
                    </select>
                    {% if error_db_driver %}
                      <div class="invalid-feedback">{{ error_db_driver }}</div>
                    {% endif %}
                  </div>
                  <div class="form-group col-12 col-md-6 required">
                    <label for="input-db-hostname" class="col-form-label {% if error_db_hostname %}text-danger{% endif %}">{{ entry_db_hostname }}</label>
                    <input type="text" name="db_hostname" value="{{ db_hostname }}" id="input-db-hostname" class="form-control {% if error_db_hostname %}is-invalid{% endif %}">
                    {% if error_db_hostname %}
                      <div class="invalid-feedback">{{ error_db_hostname }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-12 col-md-6 required">
                    <label for="input-db-username" class="col-form-label {% if error_db_username %}text-danger{% endif %}">{{ entry_db_username }}</label>
                    <input type="text" name="db_username" value="{{ db_username }}" id="input-db-username" class="form-control {% if error_db_username %}is-invalid{% endif %}">
                    {% if error_db_username %}
                      <div class="invalid-feedback">{{ error_db_username }}</div>
                    {% endif %}
                  </div>
                  <div class="form-group col-12 col-md-6">
                    <label for="input-db-password" class="col-form-label">{{ entry_db_password }}</label>
                    <input type="password" name="db_password" value="{{ db_password }}" id="input-db-password" class="form-control">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-12 col-md-6 required {% if error_db_database %}text-danger{% endif %}">
                    <label for="input-db-database" class="col-form-label">{{ entry_db_database }}</label>
                    <input type="text" name="db_database" value="{{ db_database }}" id="input-db-database" class="form-control {% if error_db_database %}is-invalid{% endif %}">
                    {% if error_db_database %}
                      <div class="invalid-feedback">{{ error_db_database }}</div>
                    {% endif %}
                  </div>
                  <div class="form-group col-12 col-md-3">
                    <label for="input-db-prefix" class="col-form-label {% if error_db_prefix %}text-danger{% endif %}">{{ entry_db_prefix }}</label>
                    <input type="text" name="db_prefix" value="{{ db_prefix }}" id="input-db-prefix" class="form-control {% if error_db_prefix %}is-invalid{% endif %}">
                    {% if error_db_prefix %}
                      <div class="invalid-feedback">{{ error_db_prefix }}</div>
                    {% endif %}
                  </div>
                  <div class="form-group col-12 col-md-3 required">
                    <label for="input-db-port" class="col-form-label {% if error_db_port %}text-danger{% endif %}">{{ entry_db_port }}</label>
                    <input type="text" name="db_port" value="{{ db_port }}" id="input-db-port" class="form-control {% if error_db_port %}is-invalid{% endif %}">
                    {% if error_db_port %}
                      <div class="invalid-feedback">{{ error_db_port }}</div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <legend>{{ text_db_administration }}</legend>
            <div class="form-row">
              <div class="form-group col-12 col-md-6 col-lg-4 required">
                <label for="input-username" class="col-form-label {% if error_username %}text-danger{% endif %}">{{ entry_username }}</label>
                <input type="text" name="username" value="{{ username }}" id="input-username" class="form-control {% if error_username %}is-invalid{% endif %}">
                {% if error_username %}
                  <div class="invalid-feedback">{{ error_username }}</div>
                {% endif %}
              </div>
              <div class="form-group col-12 col-md-6 col-lg-4 required">
                <label for="input-password" class="col-form-label {% if error_password %}text-danger{% endif %}">{{ entry_password }}</label>
                <input type="text" name="password" value="{{ password }}" id="input-password" class="form-control {% if error_password %}is-invalid{% endif %}">
                {% if error_password %}
                  <div class="invalid-feedback">{{ error_password }}</div>
                {% endif %}
              </div>
              <div class="form-group col-12 col-lg-4 required">
                <label for="input-email" class="col-form-label {% if error_email %}text-danger{% endif %}">{{ entry_email }}</label>
                <input type="text" name="email" value="{{ email }}" id="input-email" class="form-control {% if error_email %}is-invalid{% endif %}">
                {% if error_email %}
                  <div class="invalid-feedback">{{ error_email }}</div>
                {% endif %}
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-outline-secondary" href="{{ back }}"><i class="fas fa-arrow-left"></i> {{ button_back }}</a>
        <button class="btn btn-outline-primary" form="form-step-3" type="submit">{{ button_continue }} <i class="fas fa-arrow-right"></i></button>
      </div>
    </div>
  </div>
</div>
{{ footer }}
